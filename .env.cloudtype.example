# Cloudtype 배포용 환경 변수 템플릿
# 이 파일을 .env.production 으로 복사하여 사용하세요

# 데이터베이스 (Cloudtype에서 제공하는 PostgreSQL URL)
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"

# JWT 시크릿 (강력한 랜덤 문자열로 변경)
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"

# 애플리케이션 설정
NODE_ENV=production
APP_URL="https://your-app-name-xxx.cloudtype.app"

# 백업 설정
BACKUP_DIR="/app/backups"
MAX_BACKUPS=14

# 자동복구 설정 (true로 설정하면 문제 발생시 자동으로 최신 백업으로 복구 시도)
AUTO_RECOVER=true

# 알림 웹훅 (Slack, Discord 등)
WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# 로그 레벨
LOG_LEVEL=info