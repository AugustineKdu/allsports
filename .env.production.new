NODE_ENV=production
# 이 값을 Cloudtype에서 실제 PostgreSQL URL로 변경하세요
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"
# 강력한 랜덤 문자열로 변경하세요 (예: openssl rand -base64 32)
JWT_SECRET="CHANGE-THIS-TO-SECURE-RANDOM-STRING-IN-CLOUDTYPE"
NEXT_TELEMETRY_DISABLED=1
APP_URL="https://your-app-name-xxx.cloudtype.app"
BACKUP_DIR="/app/backups"
MAX_BACKUPS=14
AUTO_RECOVER=true
